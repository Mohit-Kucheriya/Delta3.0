<%- include("includes/head.ejs"); %>

    <body>
        <h1>Welcome to Official Instagram Account</h1>
        <h2>This page belongs to @<%= data.name %>
        </h2>
        <button>follow</button>
        <button>message</button>
        <h4>Followers : <%= data.followers %>
        </h4>
        <h4>Following : <%= data.following %>
        </h4>
        <!-- <h2>Accounts that follows you:</h2> -->
        <h2>Posts</h2>
        <% for( p of data.posts ) { %>
            <img src="<%= p.image %>" alt="/img" />
            <h4>Likes: <%= p.likes %>
            </h4>
            <h4>Comments: <%= p.comments %>
            </h4>
            <hr />

            <% } %>
                <%- include("includes/footer.ejs"); %>

                    <script src="/app.js"></script>
    </body>

    </html>